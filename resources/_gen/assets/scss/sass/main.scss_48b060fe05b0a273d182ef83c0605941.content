h1,h2,h3,h4,h5,h6{font-family:m3monoregular,monospace}p{margin-bottom:.5rem}*{box-sizing:border-box;border-collapse:separate}body{font-family:droid sans,helvetica neue,Helvetica,Arial,sans-serif}body{margin:0;padding:1rem}header{margin:-1rem -1rem 2rem;padding:1rem;overflow:hidden;display:flex;flex-wrap:wrap}header .logo{margin-right:4rem;margin-bottom:2rem}header h1,header h2{padding:0;margin:0}header h1{font-size:4rem;padding-bottom:.5rem}header h2{font-size:2rem}header p{font-size:1.2rem}@media(max-width:80rem){header h1{font-size:2rem}header h2{font-size:1.5rem}header p{font-size:1rem}}main{display:flex;flex-wrap:wrap}section{flex:1 1 auto;border-top:3px solid #e61414;margin:1rem;width:30rem;max-width:80rem}section.small{width:15rem}section>h1:first-child{padding-top:.5rem;margin-top:0}img{max-width:100%}pre{max-width:100%;overflow:auto}#programm{width:40rem}#supporters img{max-width:300px}.btn{display:inline-block;color:#fff;background-color:#e61414;text-decoration:none;padding:.5rem 3rem;border-radius:3px;box-shadow:0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.12),0 1px 5px 0 rgba(0,0,0,.2);transition:transform .2s}.btn:hover{background-color:#b71010;transform:translateY(2px)}