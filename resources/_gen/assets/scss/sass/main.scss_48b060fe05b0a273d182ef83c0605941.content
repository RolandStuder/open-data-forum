@charset "UTF-8";p,ul{margin-bottom:.5rem;line-height:125%}ul{list-style:none}ul li:before{content:"âœ”";font-family:droid sans,helvetica neue,Helvetica,Arial,sans-serif;color:#e61414;margin-left:-1rem;margin-right:.5rem;font-size:1.2rem}li{margin-bottom:.5rem}*{box-sizing:border-box;border-collapse:separate}body{font-family:droid sans,helvetica neue,Helvetica,Arial,sans-serif}body{margin:0;padding:0}header{border-top:5px solid #e61414;margin-top:1rem;padding:1rem;overflow:hidden;display:flex;flex-wrap:wrap;box-shadow:0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.12),0 1px 5px 0 rgba(0,0,0,.2);max-width:95%;padding:2rem;background-image:url(/images/kraken.jpg);background-repeat:no-repeat;background-position:110% 40%;background-size:30%}header .logo{margin-right:4rem;margin-bottom:2rem}header h1,header h2{padding:0;margin:0;font-family:m3monoregular,monospace}header h1{font-size:4rem;padding-bottom:0}header h2{font-size:2rem}header p{font-size:1.2rem}@media(max-width:800px){header{background-size:80%;background-position:280% 20%}}@media(max-width:80rem){header h1{font-size:2rem}header h2{font-size:1.5rem}header p{font-size:1rem}}main{display:flex;flex-wrap:wrap;align-items:flex-start}section{margin-top:1.5rem;flex:1 1 auto;width:30rem;max-width:80rem;padding:1rem 2rem}section:before{content:'';width:3rem;height:5px;margin-left:-1rem;background-color:#e61414;display:block}section.small{width:15rem}section.full-width{width:100%}section>h1:first-child,section h2:first-child{padding-top:.5rem;margin-top:0;display:inline-block;font-size:2.5rem;margin-bottom:.5rem}img{max-width:100%}pre{max-width:100%;overflow:auto}#programm{width:40rem}#supporters img{max-width:300px}.btn{display:inline-block;color:#fff;background-color:#e61414;text-decoration:none;padding:.5rem 3rem;border-radius:3px;box-shadow:0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.12),0 1px 5px 0 rgba(0,0,0,.2);transition:transform .2s}.btn:hover{background-color:#b71010;transform:translateY(-2px)}.btn:active{transform:translateY(1px)}table.program{border-spacing:3px}table.program th,table.program td{vertical-align:top;padding:.8rem}table.program td{text-align:left;background-color:#eee}table.program td .room-people{font-weight:400;font-size:.9rem}table.program .time{white-space:nowrap;text-align:left;font-weight:400}table.program .programm-session{background-color:#fff;border:2px solid #eee}table.program .programm-plenum{font-weight:700}table.program tr.break{display:none;opacity:.5;padding:.2;font-size:.9rem}